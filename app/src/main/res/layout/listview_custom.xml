        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_weight="2"
        android:textAlignment="viewEnd"
        android:id="@+id/txt_money_2"
